<b>Locations</b><br>
1) <%= link_to "Add a country", {:controller => :content , :action=>:add_a_country} %>
2) <%= link_to "Add a city", {:controller => :content , :action=>:add_a_city} %>

<br><br>
<b>Delete Location</b>
<%= form_tag(url_for(:action => :delete_city_or_country, :controller => :content)) do |f| %>
    ID: <%= text_field_tag :id %><br>
    Type: <%= select_tag :type, options_for_select(["City", "Country"]) %><br>
    <%= submit_tag 'Submit' %>
<% end %>

